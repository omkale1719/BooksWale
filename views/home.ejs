        <div class="scroll-container" id="bookRow">
            <% Book.forEach(function(book) { %>
            <div class="custom-card" data-id="<%= book._id %>">
                <a href="javascript:void(0)">
                    <img src="<%= book.image %>" alt="Product Image" class="custom-card-img" id="img-card">
                    <div class="card-body">
                        <h5 class="card-title" id="title-id"><%= book.title %></h5>
                        <h6><span style="color: black;">by &nbsp;</span><%= book.author %></h6>
                        <p class="price getprice" data-id="<%= book._id %>" id="priceid"><%= book.price %></p>
                        <p class="desc"><%= book.description %></p>
                    </div>
