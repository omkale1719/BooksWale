<% layout('./layouts/boilerplate1') %>

    <style>
      
       
        /* Heading */
        .delivery-unavailable h1 {
            font-size: 2rem;
            color: #ff4e50;
            margin-bottom: 15px;
        }

        /* Message */
        .delivery-unavailable p {
            text-align: center;
            font-size: 1rem;
            color: #333;
            margin-bottom: 20px;
        }

        /* Button */
        .delivery-unavailable a {

          
            padding: 10px 20px;
            font-size: 1rem;
            color: white;
            background-color: #4e73df;
            text-decoration: none;
            border-radius: 8px;
            transition: background-color 0.3s ease;
        }

        .delivery-unavailable a:hover {
            background-color: #3759c1;
        }
    </style>
</head>
<body>
    <div class="delivery-unavailable">
        <h1>Delivery Unavailable</h1>
        <p>We're sorry, but delivery is not available.</p>
        <a href="/">Return to Home</a>
    </div>
</body>
</html>
